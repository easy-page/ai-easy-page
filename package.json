{
	"name": "easy-page-v2",
	"version": "1.0.0",
	"description": "表单框架设计 - 简洁易用、灵活可扩展",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "pnpm -r --parallel dev",
		"build": "pnpm -r build",
		"build:packages": "./scripts/build-all.sh",
		"build:core": "pnpm --filter @easy-page/core build",
		"build:pc": "pnpm --filter @easy-page/pc build",
		"build:mobile": "pnpm --filter @easy-page/mobile build",
		"dev:pc": "pnpm --filter @easy-page/pc-demo dev",
		"dev:mobile": "pnpm --filter @easy-page/mobile-demo dev",
		"test": "pnpm -r test",
		"lint": "pnpm -r lint",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "pnpm build && changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@types/node": "^20.10.0",
		"typescript": "^5.3.0",
		"vite": "^5.4.19"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	}
}
